<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />



    <LinearLayout
        android:layout_width="29dp"
        android:layout_height="4dp"
        android:background="@color/purple_500"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/re"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#d6d7d7"
                android:gravity="center|right|left"
                android:hint="0"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6d7d7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_light_background"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnadd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#aaaaaa"
                android:text="+"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnmod"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#aaaaaa"
                android:text="%"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6d7d7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:text="3"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:text="2"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:text="1"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnsub"
        android:layout_width="113dp"
        android:layout_height="94dp"
        android:layout_weight="1"
        android:backgroundTint="#aaaaaa"
        android:text="-"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#aaaaaa"
        android:text="*"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:backgroundTint="#909090"
        android:foregroundTint="@color/cardview_light_background"
        android:scrollbarThumbHorizontal="@color/purple_500"
        android:scrollbarThumbVertical="@color/cardview_light_background"
        android:scrollbarTrackHorizontal="@color/cardview_light_background"
        android:scrollbarTrackVertical="@color/cardview_light_background"
        android:text="del"
        android:textColor="@color/white"
        android:textColorHighlight="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:textColorLink="@color/purple_500"
        android:textCursorDrawable="@color/cardview_light_background"
        android:textSize="24sp"
        app:rippleColor="@color/cardview_light_background"
        app:strokeColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="6"
        android:textSize="30sp"
        android:textStyle="bold"
        app:icon="@color/cardview_light_background" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="72dp"
        android:layout_height="101dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:icon="@color/cardview_light_background" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="8"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:width="50sp"
        android:backgroundTint="#ffffff"
        android:text="7"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#aaaaaa"
        android:text="/"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnre"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:backgroundTint="#aaaaaa"
        android:shadowColor="@color/purple_500"
        android:text="="
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#d6d7d7"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#d6d7d7"
        android:orientation="horizontal">

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>